<div class="ui grid">
  <div class="eight wide column" style="padding-right: 0px;">
    <img src="<%= random_destination.image %>" style="object-fit: cover; object-position: 100% 0; width:100%; height: 450px; padding-right: 5px;">
  </div>
  <div class="eight wide column">
    <br><br>
    <h8>Please login.</h8>

    <% if session[:invalid] %>
      <p>Apologies. In order to access the exclusive features dérive offers, please log in.</p>
    <% end %>


    <% if @user %>
      <% if @user.errors.any? %>
        <ul>
        <% @user.errors.full_messages.each do |m| %>
        <li><%= m %>
        <% end %> </li></ul>
        <% end %>
    <% end %>


    <%= form_tag "/login", method: "post" %><br>
      <p><strong><%= label_tag :username %><br></strong>
      <%= text_field_tag :username %><br>
      <p><strong><%= label_tag :password %></strong><br>
      <%= password_field_tag :password %><br><br></p>
      <%= submit_tag "Login" %><br><br>

      <h7>No dérive account?</h7>
      <p>No problem. Click <a href="/users/new">here</a> to make your dérive account.</p>
  </div>
</div>
